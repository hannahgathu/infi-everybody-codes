                                <td>
                                    @Html.DisplayFor(r=>record.Longitude)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </td>
            <td>
                <table id="column15">
                    <thead>
                        <tr>
                            <th colspan="4">Cameras 3 &amp; 5</th>
                        </tr>
                        <tr>
                            <th>Number</th>
                            <th>Name</th>
                            <th>Latitude</th>
                            <th>Longitude</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model.DivByThreeAndFive)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(r=>record.Number)
                                </td>
                                <td>
                                    @Html.DisplayFor(r=>record.Name)
