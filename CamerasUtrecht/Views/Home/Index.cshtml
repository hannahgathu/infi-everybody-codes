                    </tbody>
                </table>
            </td>
            <td>
                <table id="column5">
                    <thead>
                        <tr>
                            <th colspan="4">Cameras 5</th>
                        </tr>
                        <tr>
                            <th>Number</th>
                            <th>Name</th>
                            <th>Latitude</th>
                            <th>Longitude</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model.DivByFive)
