                                <td>
                                    @Html.DisplayFor(r=>record.Number)
                                </td>
                                <td>
                                    @Html.DisplayFor(r=>record.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(r=>record.Latitude)
